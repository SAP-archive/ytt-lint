{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "jobs"
    ],
    "properties": {
        "jobs": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "plan"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "public": {
                        "type": "boolean"
                    },
                    "serial_groups": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "plan": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "passed": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "config": {
                                    "type": "object",
                                    "required": [
                                        "image_resource",
                                        "platform",
                                        "run"
                                    ],
                                    "properties": {
                                        "container_limits": {
                                            "type": "object"
                                        },
                                        "image_resource": {
                                            "type": "object",
                                            "required": [
                                                "source",
                                                "type"
                                            ],
                                            "properties": {
                                                "source": {
                                                    "type": "object",
                                                    "required": [
                                                        "repository"
                                                    ],
                                                    "properties": {
                                                        "repository": {
                                                            "type": "string"
                                                        },
                                                        "username": {
                                                            "type": "string"
                                                        },
                                                        "tag": {
                                                            "type": "string"
                                                        },
                                                        "password": {
                                                            "type": "string"
                                                        }
                                                    }
                                                },
                                                "type": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "platform": {
                                            "type": "string"
                                        },
                                        "run": {
                                            "type": "object",
                                            "required": [
                                                "args",
                                                "path"
                                            ],
                                            "properties": {
                                                "args": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string"
                                                    }
                                                },
                                                "path": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "params": {
                                            "type": "object",
                                            "additionalProperties": true
                                        },
                                        "inputs": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "required": [
                                                    "name"
                                                ],
                                                "properties": {
                                                    "name": {
                                                        "type": "string"
                                                    },
                                                    "path": {
                                                        "type": "string"
                                                    },
                                                    "optional": {
                                                        "type": "boolean"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                },
                                "task": {
                                    "type": "string"
                                },
                                "timeout": {
                                    "type": "string"
                                },
                                "get": {
                                    "type": "string"
                                },
                                "put": {
                                    "type": "string"
                                },
                                "trigger": {
                                    "type": "boolean"
                                },
                                "attempts": {
                                    "type": "integer"
                                }
                            }
                        }
                    }
                }
            }
        },
        "resource_types": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "source",
                    "type"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "source": {
                        "type": "object",
                        "required": [
                            "repository",
                            "tag"
                        ],
                        "properties": {
                            "repository": {
                                "type": "string"
                            },
                            "tag": {
                                "type": "string"
                            }
                        }
                    },
                    "type": {
                        "type": "string"
                    }
                }
            }
        },
        "resources": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "source",
                    "type"
                ],
                "properties": {
                    "icon": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "source": {
                        "type": "object",
                        "additionalProperties": true
                    },
                    "type": {
                        "type": "string"
                    }
                }
            }
        }
    }
}